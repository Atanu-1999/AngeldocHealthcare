<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Booking_Step_One"
    android:background="@color/black">

  <LinearLayout
      android:id="@+id/header"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/black"
      android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="10dp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:padding="@dimen/_8sdp"
            android:layout_gravity="center"
            android:src="@drawable/ic_back_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:text="Book Appointment"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:layout_gravity="center"
            android:gravity="end"
            android:orientation="horizontal">

          <ImageView
              android:id="@+id/notification"
              android:layout_width="@dimen/_30sdp"
              android:layout_height="@dimen/_30sdp"
              android:layout_marginStart="@dimen/_5sdp"
              android:padding="@dimen/_5sdp"
              android:layout_gravity="center"
              android:src="@drawable/share" />

        </LinearLayout>

      </LinearLayout>

    </LinearLayout>

  </LinearLayout>

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
    android:scrollbars="none"
      android:layout_below="@id/header">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      android:orientation="vertical"
        android:gravity="center">

      <ImageView
          android:layout_width="@dimen/_200sdp"
          android:layout_height="@dimen/_200sdp"
        android:src="@drawable/women_doc"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/boo_app_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          android:orientation="vertical"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="Dr. Rashmi Kochar"
                android:textColor="@color/black"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_years"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_margin="2dp"
                android:text="5 Years"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />

          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_degree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="General Physician, MBBS, MS"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_margin="2dp"
                android:text="Experience"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"/>

          </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_Dob"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/edite_bg"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:padding="5dp"
            android:layout_marginTop="@dimen/_7sdp">

          <EditText
              android:id="@+id/et_DOB"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:background="@null"
              android:hint="Select Doctor Schedule"
              android:inputType="none"
              android:editable="false"
              android:textColor="@color/black"
              android:textColorHint="#5A5A5A"
              android:textSize="@dimen/_13ssp"/>

          <ImageView
              android:id="@+id/iv_date"
              android:layout_width="match_parent"
              android:layout_height="@dimen/_35sdp"
              android:layout_gravity="center"
              android:layout_weight="6"
              android:padding="@dimen/_5sdp"
              android:src="@drawable/baseline_calendar_month_24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/edite_bg">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:background="@drawable/time_background"
              android:padding="@dimen/_3sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_margin="@dimen/_3sdp"
                android:background="@drawable/schedule_bg">

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/_36sdp"
                  android:text="Morning"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:textSize="@dimen/_12ssp"
                  android:textColor="@color/white"
                  android:textStyle="normal"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_margin="@dimen/_3sdp">

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/_36sdp"
                  android:text="Afternoon"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:textSize="@dimen/_12ssp"
                  android:textColor="@color/black"
                  android:textStyle="normal"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_margin="@dimen/_3sdp">

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/_36sdp"
                  android:text="Evening"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:textSize="@dimen/_12ssp"
                  android:textColor="@color/black"
                  android:textStyle="normal"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_margin="@dimen/_3sdp">

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/_36sdp"
                  android:text="Night"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:textSize="@dimen/_12ssp"
                  android:textColor="@color/black"
                  android:textStyle="normal"/>

            </LinearLayout>

          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="@dimen/_3sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                android:layout_weight="1"
                android:text="9:00 A.M"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/_12ssp"
                android:background="@drawable/edite_bg"
                android:textColor="@color/black"
                android:layout_margin="@dimen/_2sdp"
                android:textStyle="normal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                android:layout_weight="1"
                android:text="10:00 A.M"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/_12ssp"
                android:background="@drawable/edite_bg"
                android:textColor="@color/black"
                android:layout_margin="@dimen/_2sdp"
                android:textStyle="normal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                android:layout_weight="1"
                android:text="11:00 A.M"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/_12ssp"
                android:background="@drawable/edite_bg"
                android:textColor="@color/black"
                android:layout_margin="@dimen/_2sdp"
                android:textStyle="normal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                android:layout_weight="1"
                android:text="12:00 P.M"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/_12ssp"
                android:background="@drawable/edite_bg"
                android:textColor="@color/black"
                android:layout_margin="@dimen/_2sdp"
                android:textStyle="normal"/>


          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="@dimen/_3sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                android:layout_weight="1"
                android:text="9:00 A.M"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/_12ssp"
                android:background="@drawable/edite_bg"
                android:textColor="@color/black"
                android:layout_margin="@dimen/_2sdp"
                android:textStyle="normal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                android:layout_weight="1"
                android:text="10:00 A.M"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/_12ssp"
                android:background="@drawable/edite_bg"
                android:textColor="@color/black"
                android:layout_margin="@dimen/_2sdp"
                android:textStyle="normal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                android:layout_weight="1"
                android:text="11:00 A.M"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/_12ssp"
                android:background="@drawable/edite_bg"
                android:textColor="@color/black"
                android:layout_margin="@dimen/_2sdp"
                android:textStyle="normal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                android:layout_weight="1"
                android:text="12:00 P.M"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/_12ssp"
                android:background="@drawable/edite_bg"
                android:textColor="@color/black"
                android:layout_margin="@dimen/_2sdp"
                android:textStyle="normal"/>


          </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          android:orientation="vertical">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@drawable/edite_bg"
              android:layout_marginTop="@dimen/_5sdp"
              android:layout_marginRight="@dimen/_10sdp"
              android:layout_marginLeft="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edite_bg"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp">

              <Spinner
                  android:id="@+id/sp_dr"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/_40sdp" />

            </LinearLayout>

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/edite_bg"
                android:hint="Please Enter Your Name"
                android:inputType="textPersonName"
                android:maxLength="20"
                android:textColor="@color/black"
                android:textColorHint="#5D5D5D"
                android:textSize="@dimen/_13ssp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/edite_bg"
                android:hint="Please Enter Phone Number"
                android:inputType="number"
                android:maxLength="10"
                android:textColor="@color/black"
                android:textColorHint="#5D5D5D"
                android:textSize="@dimen/_13ssp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp">

              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/_40sdp"
                  android:layout_weight="1"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:background="@drawable/edite_bg">

                <TextView
                    android:id="@+id/txt_select_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="From Date"
                    android:textColor="#5D5D5D" />

                <ImageView
                    android:id="@+id/select_date"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/baseline_date_range_24"/>

              </RelativeLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:background="@drawable/edite_bg"
                  android:layout_marginLeft="@dimen/_10sdp">

                <Spinner
                    android:id="@+id/sp_gender"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp" />

              </LinearLayout>

            </LinearLayout>

          </LinearLayout>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/_10sdp"
              android:layout_marginRight="@dimen/_10sdp"
              android:layout_marginTop="@dimen/_5sdp"
              android:textSize="@dimen/_8ssp"
              android:text="Hello guys! Today I am sharing one of my latest doctor booking app project. If you are thinking about creating any mobile app or website feel free to DM me or email me."
              android:layout_marginBottom="@dimen/_5sdp"/>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginLeft="@dimen/_10sdp"
              android:layout_marginRight="@dimen/_10sdp"
              android:layout_marginTop="@dimen/_5sdp"
              android:layout_marginBottom="@dimen/_20sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:background="@drawable/get_started_bg">

              <TextView
                  android:id="@+id/tv_fee"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/_36sdp"
                  android:text="₹ 499"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:textSize="@dimen/_13ssp"
                  android:textColor="@color/white"
                  android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/get_started_bg">

              <TextView
                  android:id="@+id/btn_book"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/_36sdp"
                  android:text="BOOK NOW"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:textSize="@dimen/_13ssp"
                  android:textColor="@color/white"
                  android:textStyle="bold"/>

            </LinearLayout>

          </LinearLayout>

        </LinearLayout>

      </LinearLayout>

    </LinearLayout>

  </ScrollView>

</RelativeLayout>